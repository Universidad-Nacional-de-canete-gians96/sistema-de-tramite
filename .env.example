# Configuración de Base de Datos
# Copia este archivo a .env y configura las credenciales

# Para Dokploy usar las credenciales internas de tu base de datos MySQL:
DB_HOST=tu-host-mysql
DB_PORT=3306
DB_NAME=tu_base_datos
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña

# Para desarrollo local usar:
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=sis_tramite
# DB_USER=root
# DB_PASSWORD=

# Configuración de la aplicación
APP_ENV=production
APP_DEBUG=false
APP_NAME="Sistema de Trámite Documentario"

# Puerto de la aplicación (para desarrollo local)
PORT=80
